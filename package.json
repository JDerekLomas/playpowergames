{
    "name": "k8-games",
    "private": true,
    "scripts": {
        "dev": "pnpm -r dev",
        "build": "node scripts/build-game.mjs",
        "build-all": "pnpm -r build && pnpm build-scorm",
        "build-scorm": "node scripts/scorm/build-scorm.mjs",
        "lint": "pnpm -r lint",
        "create-game": "node scripts/create-game.js",
        "deploy:dev": "NODE_ENV=development node scripts/deploy.js",
        "deploy:prod": "NODE_ENV=production node scripts/deploy.js",
        "start:dev": "pnpm deploy:dev && pnpm dev",
        "start": "node scripts/start.js",
        "prepare": "simple-git-hooks"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "vite": "^6.4.1",
        "phaser": "^3.70.0",
        "@types/node": "^20.11.19",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "archiver": "^7.0.1",
        "esbuild": "~0.25.0",
        "eslint": "^9.35.0",
        "fast-xml-parser": "^5.2.3",
        "glob": "^12.0.0",
        "simple-git-hooks": "^2.9.0"
    },
    "simple-git-hooks": {
        "pre-commit": "node packages/sdk/scripts/updateScormLastUpdated.js"
    },
    "pnpm": {
        "overrides": {
            "brace-expansion": "^1.1.12",
            "js-yaml": "4.1.1",
            "tar": "7.5.4",
            "glob": "12.0.0",
            "lodash": "^4.17.23",
            "@smithy/config-resolver": "^4.4.0",
            "diff": "^4.0.4"
        }
    }
}